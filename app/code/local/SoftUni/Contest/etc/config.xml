<?xml version="1.0"?>
<config>
    <modules>
        <SoftUni_Contest>
            <version>1.0.0</version>
        </SoftUni_Contest>
    </modules>

    <global>
        <helpers>
            <softuni_contest>
                <class>SoftUni_Contest_Helper</class>
            </softuni_contest>
        </helpers>
        <models>
            <softuni_contest>
                <class>SoftUni_Contest_Model</class>
                <resourceModel>softuni_contest_resource</resourceModel>
            </softuni_contest>
            <softuni_contest_resource>
                <class>SoftUni_Contest_Model_Resource</class>
                <entities>
                    <contest>
                        <table>softuni_contest_contest</table>
                    </contest>
                    <contestant>
                        <table>softuni_contest_contestant</table>
                    </contestant>
                </entities>
            </softuni_contest_resource>
        </models>
        <resources>
            <softuni_contest_setup>
                <setup>
                    <module>SoftUni_Contest</module>
                </setup>
            </softuni_contest_setup>
        </resources>
        <blocks>
            <softuni_contest>
                <class>SoftUni_Contest_Block</class>
            </softuni_contest>
        </blocks>
    </global>

    <frontend>
        <routers>
            <softuni_contest>
                <use>standard</use>
                <args>
                    <module>SoftUni_Contest</module>
                    <frontName>softuni_contest</frontName>
                </args>
            </softuni_contest>
        </routers>
        <layout>
            <updates>
                <softuni_contest module="SoftUni_Contest">
                    <file>softuni_contest.xml</file>
                    <!--TODO можно создать в отдельной папке softuni/softuni_contest.xml-->
                </softuni_contest>
            </updates>
        </layout>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <softuni_contest before="Mage_Adminhtml">SoftUni_Contest</softuni_contest>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <SoftUni_Contest>
                    <files>
                        <defaul>SoftUni_Contest.cvs</defaul>
                    </files>
                </SoftUni_Contest>
            </modules>
        </translate>
        <layout>
            <updates>
                <softuni_contest module="softuni_contest">
                    <file>softuni_contest.xml</file>
                </softuni_contest>
                <softuni_contestant module="softuni_contest">
                    <file>softuni_contestant.xml</file>
                </softuni_contestant>
            </updates>
        </layout>
    </adminhtml>
</config>